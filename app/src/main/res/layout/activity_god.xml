<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActivityDark"
    tools:context="cris.hackathon.cosanostra.uiComponents.god.GodActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
       android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_god"
            android:layout_alignParentStart="true"
            />
    
        <TextView style="@style/labelDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dios"
            android:id="@+id/textView_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@color/colorGrayLight"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="Despertar ladrones"
            android:gravity="center"
            android:id="@+id/textView" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageButton_accept"
            android:layout_margin="4dp"
            android:background="@color/colorGrayLight"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@color/colorGrayLight"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"
            android:text="Despertar policia"
            android:gravity="center"
            android:id="@+id/textView_Police" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageButton_acceptPolice"
            android:layout_margin="4dp"
            android:background="@color/colorGrayLight"
            android:clickable="true"
            android:elevation="4dp"
            android:padding="20dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@color/colorGrayLight"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Despertar medico"
                android:gravity="center"
                android:id="@+id/textView_Doctor" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton_acceptMedic"
                android:layout_margin="4dp"
                android:background="@color/colorGrayLight"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"/>

        </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timerTextView"
        android:layout_marginTop="36dp" />


    </LinearLayout>

</RelativeLayout>


